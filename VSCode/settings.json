{
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // Editor Setting
  "editor.fontLigatures": true,
  "editor.fontSize": 16, //編輯區字體大小
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace, 'Fira Code'",
  "editor.cursorBlinking": "smooth",
  "editor.renderLineHighlight": "all", //將當前行標示全開
  "editor.renderControlCharacters": true, //開啟字元轉換控制
  "editor.renderWhitespace": "boundary", // set renderIndentGuides to boundary for use Guides extension {default:true}
  "editor.wordWrap": "on", //畫面變化時，程式碼會跟著變化換行
  "editor.formatOnSave": true, //檔案儲存自動格式化
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.stickyTabStops": true, //游標選取時，會依照tab停駐點方式選取
  "editor.minimap.enabled": true,
  // bracketPairColorization extensions built in August 2021 (version 1.60)
  "editor.bracketPairColorization.enabled": true,
  // Blockman extensions setting for new VSCode API setting in September 2021 v1.61
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": false,
  // https://github.com/microsoft/vscode/issues/20947
  "editor.minimap.renderCharacters": false, // minimap render block instead of character
  "editor.lineNumbers": "relative",
  // Workbench setting
  "workbench.colorTheme": "Material Theme High Contrast",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#5A5AAD",
    "editor.findMatchHighlightBackground": "#8C8C00"
  },
  // Panel
  // Panel - Terminal Setting
  "terminal.integrated.fontFamily": "'Fira Code', 'DejaVu Sans Mono','Monospace'", //字型
  "terminal.integrated.fontSize": 16, //字體大小
  "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash.exe", //Windows Ctrl+Shift+C 開啟外部terminal
  // Panel - Output
  "[Log]": {
    // Source : https://igorbrejc.net/vscode-output-font-size
    "editor.fontSize": 16
  },
  // Misc
  "window.zoomLevel": 0,
  "window.menuBarVisibility": "compact", //按alt開關功能列表
  "window.titleBarStyle": "custom", // native & custom. default is native
  "breadcrumbs.enabled": true, // The editor has a navigation bar above its contents called Breadcrumbs.
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": true,
  // https://www.zhihu.com/question/34415763
  "files.autoGuessEncoding": false, // 不推薦開啟autoGuessEncoding
  "zenMode.hideStatusBar": false,
  // Source : https://stackoverflow.com/questions/49196146/how-do-you-show-tabs-in-zen-mode-of-visual-studio-code
  "zenMode.hideTabs": false, // 如果沒有開啟的話，會像Vim一樣只會顯示當前視窗的Buffer，不會將全部已開啟Tab展示
  // Specific File Formatter
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.jediEnabled": true,
  "python.languageServer": "Jedi",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  // vscode python formatting
  // https://dev.to/eegli/quick-guide-to-python-formatting-in-vs-code-2040
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "120"
  ],
  // Extensions setting
  // vscode-settings-cycler
  "settings.cycle": [
    {
      "id": "linenumber", // must be unique
      "overrideWorkspaceSettings": false,
      "values": [
        {
          "editor.lineNumbers": "relative"
        },
        {
          "editor.lineNumbers": "on"
        }
      ]
    }
  ],
  // todo-tree
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "BUG",
    "HOT",
    "HACK",
    "NOTE",
    "TIP",
    "XXX",
  ],
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "black",
    "background": "orange",
    "icon": "check",
    "type": "tag",
    "opacity": 50,
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "foreground": "black",
      "type": "text-and-comment",
      "gutterIcon": true
    },
    "FIXME": {
      "icon": "tools",
      "foreground": "white",
      "type": "text-and-comment",
      "gutterIcon": true
    },
    "BUG": {
      "icon": "bug",
      "foreground": "black",
      "type": "whole-line",
      "gutterIcon": true
    },
    "HOT": {
      "icon": "flame",
      "foreground": "black",
      "type": "text-and-comment",
      "gutterIcon": true
    },
    "HACK": {
      "icon": "rocket",
      "foreground": "black",
      "type": "text-and-comment",
      "gutterIcon": true
    },
    "NOTE": {
      "icon": "note",
      "foreground": "black",
      "type": "tag-and-subTag",
      "gutterIcon": true
    },
    "TIP": {
      "icon": "squirrel",
      "foreground": "black",
      "type": "text",
      "gutterIcon": true
    },
    "XXX": {
      "icon": "dash",
      "foreground": "white",
      "type": "tag",
      "gutterIcon": true
    },
  },
  "todo-tree.highlights.backgroundColourScheme": [
    "bisque",
    "green",
    "red",
    "orange",
    "yellow",
    "beige",
    "violet",
    "gray",
    "magenta",
    "indigo",
    "gold",
    "silver",
    "purple",
    "brown",
    "skin",
    "pink",
    "blue",
    "cyan",
    "navy",
    "cornsilk",
  ],
  // blockman
  "blockman.n01LineHeight": 0,
  "blockman.n04ColorComboPreset": "Classic Dark 3 (Solid colors)",
  "blockman.n32BlackListOfFileFormats": "plaintext, markdown, python",
  // vim
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.handleKeys": {
    "<C-k>": false
  },
  // plugin in vim extensions
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.surround": true,
  // keybindings in vim extensions
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "q",
        "q"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "H"
      ],
      "after": [
        "^"
      ]
    },
    {
      "before": [
        "L"
      ],
      "after": [
        "g",
        "_"
      ]
    },
    {
      "before": [
        "Y"
      ],
      "after": [
        "y",
        "$"
      ]
    },
    {
      "before": [
        "a",
        ";"
      ],
      "after": [
        ":"
        // use commands
        //"vim.showQuickpickCmdLine"
      ]
    },
    {
      "before": [
        "`",
      ],
      "after": [
        "'"
      ]
    },
    {
      "before": [
        "'",
      ],
      "after": [
        "`"
      ]
    },
    {
      "before": [
        "<leader>",
        "n"
      ],
      "commands": [
        ":noh"
      ]
    },
    {
      "before": [
        "<leader>",
        "q",
        "q"
      ],
      "commands": [
        ":q!"
      ]
    },
    {
      "before": [
        "<leader>",
        "w"
      ],
      "commands": [
        ":w"
      ]
    },
    {
      "before": [
        "<leader>",
        "r"
      ],
      "commands": [
        ":reg"
      ]
    },
    {
      "before": [
        "<leader>",
        "r",
        "r"
      ],
      "commands": [
        "workbench.action.reloadWindow"
      ]
    },
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "^",
        "d",
        "g",
        "_"
      ]
    },
    {
      "before": [
        "<leader>",
        "t",
        "t"
      ],
      "commands": [
        ":tabe"
        //workbench.action.files.newUntitledFile
      ]
    },
    {
      "before": [
        "<leader>",
        "t",
        "e"
      ],
      "commands": [
        "extension.advancedNewFile"
      ]
    },
    {
      "before": [
        "<leader>",
        "t",
        "o"
      ],
      "commands": [
        ":tabo"
        //@command:workbench.action.closeOtherEditors
      ]
    },
    {
      "before": [
        "<leader>",
        "H"
      ],
      "after": [
        "H"
      ]
    },
    {
      "before": [
        "<leader>",
        "M"
      ],
      "after": [
        "M"
      ]
    },
    {
      "before": [
        "<leader>",
        "L"
      ],
      "after": [
        "L"
      ]
    },
    {
      "before": [
        "<leader>",
        "p"
      ],
      "after": [
        "\"",
        "0",
        "p"
        //old commands
        //"workbench.action.showCommands"
      ]
    },
    {
      "before": [
        "<leader>",
        "P"
      ],
      "after": [
        "\"",
        "+",
        "P"
      ]
    },
    {
      "before": [
        "<leader>",
        "x"
      ],
      "after": [
        "\"",
        "_",
        "x"
      ]
    },
    {
      "before": [
        "<leader>",
        "d",
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<leader>",
        "d",
        "w"
      ],
      "after": [
        "\"",
        "_",
        "d",
        "w"
      ]
    },
    // Bind only for VSCode in Vim keymap
    {
      "before": [
        "<leader>",
        "t"
      ],
      "commands": [
        "workbench.action.gotoSymbol"
      ]
    },
    {
      "before": [
        "<leader>",
        "m"
      ],
      "commands": [
        "bookmarks.toggle"
      ]
    },
    {
      "before": [
        "<leader>",
        "b"
      ],
      "commands": [
        "bookmarks.list"
      ]
    },
    {
      "before": [
        "<leader>",
        "s",
        "j"
      ],
      "commands": [
        "workbench.action.openSettingsJson"
        // open vscode settings json file
      ]
    },
    {
      "before": [
        "<leader>",
        "k",
        "j"
      ],
      "commands": [
        "workbench.action.openGlobalKeybindingsFile"
        // open vscode keybindings json file
      ]
    },
    {
      "before": [
        "<leader>",
        "g",
        "o"
      ],
      "commands": [
        "workbench.action.closeEditorsInOtherGroups"
        // close others editor groups
        // like vim keybindings c-w o
      ]
    },
    {
      "before": [
        "<leader>",
        "e",
        "o"
      ],
      "commands": [
        "workbench.action.closeOtherEditors"
        // close other editors in group
      ]
    },
    {
      "before": [
        "<C-w>",
        "z"
      ],
      "commands": [
        "workbench.action.minimizeOtherEditors"
        // 縮小其他的 editor
        // in vim is: close preview window
      ]
    },
    {
      "before": [
        "<C-w>",
        "n"
      ],
      "commands": [
        "workbench.action.evenEditorWidths"
        // 均分所有的 editor
        // in vim is: open new window, N lines high
      ]
    },
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "<leader>",
        "x"
      ],
      "after": [
        "\"",
        "_",
        "x"
      ]
    }
  ],
}