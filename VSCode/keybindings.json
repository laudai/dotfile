// 將按鍵繫結關係放在此檔案中以覆寫預設
[
  // Terminal
  {
    "key": "ctrl+a j",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus && terminalProcessSupported"
  },
  {
    "key": "ctrl+a k",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus && terminalProcessSupported"
  },
  {
    "key": "ctrl+a h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus && terminalProcessSupported"
  },
  {
    "key": "ctrl+a l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus && terminalProcessSupported"
  },
  {
    "key": "ctrl+a ctrl+k",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus && terminalProcessSupported"
  },
  // Tab
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+pageup",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "ctrl+pagedown",
    "command": "-workbench.action.nextEditor"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "-workbench.action.quickOpenLeastRecentlyUsedEditorInGroup"
  },
  // Misc
  {
    "key": "Shift+Alt+m",
    "command": "editor.action.toggleMinimap"
  },
  {
    "key": "ctrl+shift+q",
    "command": "workbench.action.quit"
  },
  {
    "key": "ctrl+q",
    "command": "-workbench.action.quit"
  },
  // 檢視: 快速開啟群組中上一個最近使用的編輯器
  // View: Quick Open Previous Recently Used Editor in Group
  {
    "key": "ctrl+k /",
    "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
  },
  // View: Quick Open Least Recently Used Editor in Group
  // 檢視: 快速開啟群組中最不常使用的編輯器
  {
    "key": "ctrl+k ctrl+/",
    "command": "workbench.action.quickOpenLeastRecentlyUsedEditorInGroup"
  },
  // Editor and Group
  {
    "key": "ctrl+k h",
    "command": "workbench.action.moveEditorToPreviousGroup"
  },
  {
    "key": "ctrl+alt+left",
    "command": "-workbench.action.moveEditorToPreviousGroup"
  },
  {
    "key": "ctrl+k l",
    "command": "workbench.action.moveEditorToNextGroup"
  },
  {
    "key": "ctrl+alt+right",
    "command": "-workbench.action.moveEditorToNextGroup"
  },
  {
    // 縮小其他的 editor
    "key": "ctrl+a z",
    "command": "workbench.action.minimizeOtherEditors"
  },
  {
    // 均分所有的 editor
    "key": "ctrl+a n",
    "command": "workbench.action.evenEditorWidths"
  },
  // Focus on
  {
    "key": "shift+alt+e",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "ctrl+a space",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    // 當焦點不在編輯區域時，將焦點移動到第一個 group 的第一個 editor
    "key": "ctrl+k v",
    "command": "workbench.action.firstEditorInGroup",
    "when": "!editorTextFocus"
  },
  /*
    ______     __                  _
   / ____/  __/ /____  ____  _____(_)___  ____  _____
  / __/ | |/_/ __/ _ \/ __ \/ ___/ / __ \/ __ \/ ___/
 / /____>  </ /_/  __/ / / (__  ) / /_/ / / / (__  )
/_____/_/|_|\__/\___/_/ /_/____/_/\____/_/ /_/____/
  Extensions
  */
  // bookmarks
  {
    "key": "ctrl+alt+j",
    "command": "bookmarks.jumpToNext",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+l",
    "command": "-bookmarks.jumpToNext",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+k",
    "command": "bookmarks.jumpToPrevious",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+j",
    "command": "-bookmarks.jumpToPrevious",
    "when": "editorTextFocus"
  },
  // Settings Cycler keybindings
  {
    "key": "ctrl+shift+F3",
    "command": "settings.cycle.linenumber",
  },
  // blockman
  {
    // 開啟/關閉 blockman
    "key": "ctrl+alt+b",
    "command": "blockman.toggleEnableDisable",
  },
  /*
 _    ___              __ __           __    _           ___
| |  / (_)___ ___     / //_/__  __  __/ /_  (_)___  ____/ (_)___  ____ ______
| | / / / __ `__ \   / ,< / _ \/ / / / __ \/ / __ \/ __  / / __ \/ __ `/ ___/
| |/ / / / / / / /  / /| /  __/ /_/ / /_/ / / / / / /_/ / / / / / /_/ (__  )
|___/_/_/ /_/ /_/  /_/ |_\___/\__, /_.___/_/_/ /_/\__,_/_/_/ /_/\__, /____/
                             /____/                            /____/
  Vim Keybindings
  */
  {
    "key": "ctrl+alt+/",
    "command": "toggleVim"
  },
  {
    "key": "ctrl+k ctrl+k",
    "command": "extension.vim_ctrl+k",
    "when": "editorTextFocus && vim.active && vim.mode== 'Insert' && !inDebugRepl"
  },
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly && vim.active"
  },
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly && vim.active"
  },
]